<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Medicapp.login">
    <ContentPage.Content>
        <StackLayout Margin="20">
            <Label 
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalOptions="Center"
                Text="MedicTime">
            </Label>
            <Image
                Source="Logo.png">
            </Image>
            <Label 
                Text="Email">
            </Label>
            <Entry 
               Keyboard="Email"
                Placeholder="Escriba su correo.......">
            </Entry>
            <Label 
                Text="Password">
            </Label>
            <Entry 
                IsPassword="True"
                Placeholder="Escriba su Contraseña.......">
            </Entry>
            <ActivityIndicator>
            </ActivityIndicator>
            <Button
                BackgroundColor="Navy"
                BorderRadius="23"
                Text="Login"
                TextColor="White">

            </Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>